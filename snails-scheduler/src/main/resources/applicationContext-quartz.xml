			<value>execute</value>
		</property>
	</bean>

	<bean id="executeHuxiuJob" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="huxiuJobService" />
		</property>
		<property name="targetMethod">
