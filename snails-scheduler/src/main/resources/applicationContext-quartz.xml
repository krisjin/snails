    <bean id="lagouTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail">
            <ref bean="executeLagouJob" />
        </property>
        <property name="cronExpression">
            <value>00 47 0 * * ?</value>
        </property>
    </bean>

	<bean id="csdnTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="executeCsdnJob" />
		</property>
		<property name="cronExpression">
			<value>00 12 13 * * ?</value>
		</property>
	</bean>

