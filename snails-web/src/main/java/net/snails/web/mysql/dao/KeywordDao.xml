<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.snails.web.mysql.dao.KeywordDao">
	<insert id="addKeyword" parameterType="net.snails.entity.mysql.Keyword">
		insert into keyword(name,content) value (#{name},#{content})
		<selectKey resultType="int" keyProperty="id">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>

	<delete id="deleteKeyword" parameterType="int">
		delete from keyword where id=#{id}
	</delete>
	
	<update id="updateKeyword" parameterType="net.snails.entity.mysql.Keyword">
		update keyword set name=#{name}, content=#{content} where id=#{id}
	</update>
		
	<select id="getKeywordWithPage" resultType="net.snails.entity.mysql.Keyword">
		select * from keyword limit #{offset},#{rows}
	</select>
	
	<select id="getTotalKeywordCounts" resultType="long">
		select count(*) from keyword
	</select>
	
	<select id="getKeywordById" parameterType="String" resultType="net.snails.entity.mysql.Keyword">
		select * from keyword where id=#{id}
	</select>
	
</mapper>  
